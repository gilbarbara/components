    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.0.7"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "clean": "del lib/* && del esm/*",
    "lint": "eslint --fix src stories test",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --bail --coverage",
    "typecheck": "tsc -p stories/tsconfig.json --noEmit",
    "size": "size-limit",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage && npm run build && npm run size",
    "storybook:dev": "storybook dev -p 4000",
    "storybook:build": "storybook build -o build",
    "prepublishOnly": "npm run validate",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "stories/**/*"
        ],
        "rules": {
          "react/function-component-definition": "off"
        }
      }
    ]
  },
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "name": "lib",
      "path": "./lib/*.js",
      "limit": "160 KB"
    },
    {
      "name": "esm",
      "path": "./esm/**/*.js",
      "limit": "100 KB"
    }
  ]
}
