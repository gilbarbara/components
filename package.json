{
  "name": "@gilbarbara/components",
  "version": "0.5.1",
  "description": "A collection of imperfect React components",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilbarbara/components"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/components/issues"
  },
  "homepage": "https://github.com/gilbarbara/components",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "./lib",
  "files": [
    "esm",
    "lib",
    "emotion.d.ts",
    "src"
  ],
  "sideEffects": false,
  "keywords": [],
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "react": "17 - 18",
    "react-dom": "17 - 18"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.2.0",
    "@gilbarbara/helpers": "^0.6.3",
    "@gilbarbara/react-dropdown": "^0.1.0",
    "colorizr": "^2.1.1",
    "date-fns": "^2.29.3",
    "deepmerge-ts": "^4.2.2",
    "is-lite": "^0.9.2",
    "polished": "^4.2.2",
    "react-day-picker": "^8.3.0",
    "react-hook-form": "^7.36.1",
    "react-inlinesvg": "^3.0.1",
    "react-innertext": "^1.1.5",
    "react-merge-refs": "^1.1.0",
    "react-use": "^17.4.0",
    "scroll": "^3.0.1",
    "scrollparent": "^2.0.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@gilbarbara/eslint-config": "^0.3.5",
    "@gilbarbara/hooks": "^0.4.1",
    "@gilbarbara/prettier-config": "^0.1.0",
    "@gilbarbara/tsconfig": "^0.1.1",
    "@gilbarbara/types": "^0.1.1",
    "@size-limit/preset-big-lib": "^8.1.0",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-storysource": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/client-api": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/theming": "^6.5.12",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.7.23",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@types/scroll": "^3.0.1",
    "@types/scrollparent": "^2.0.1",
    "chromatic": "^6.10.1",
    "csstype": "^3.1.1",
    "del-cli": "^5.0.0",
    "deploy-aws-s3-cloudfront": "^3.7.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-watch-typeahead": "^2.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.5.0",
    "repo-tools": "^0.2.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "type-fest": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "clean": "del lib/* && del esm/*",
    "lint": "eslint --fix src stories",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --bail --coverage",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage && npm run build && npm run size",
    "storybook:dev": "start-storybook -p 4000",
    "storybook:build": "build-storybook -o build",
    "prepublishOnly": "npm run validate",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "stories/**/*"
        ],
        "rules": {
          "react/function-component-definition": "off"
        }
      }
    ]
  },
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "name": "lib",
      "path": "./lib/*.js",
      "limit": "160 KB"
    },
    {
      "name": "esm",
      "path": "./esm/**/*.js",
      "limit": "100 KB"
    }
  ]
}
