{
  "name": "@gilbarbara/components",
  "version": "0.9.7",
  "description": "A collection of imperfect React components",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilbarbara/components"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/components/issues"
  },
  "homepage": "https://github.com/gilbarbara/components",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "react": "17 - 18",
    "react-dom": "17 - 18"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.2.1",
    "@gilbarbara/helpers": "^0.8.6",
    "@gilbarbara/hooks": "^0.6.4",
    "@gilbarbara/react-dropdown": "^0.1.0",
    "colorizr": "^2.1.1",
    "date-fns": "^2.30.0",
    "deepmerge-ts": "^5.1.0",
    "is-lite": "^0.9.3",
    "polished": "^4.2.2",
    "react-day-picker": "^8.8.1",
    "react-hook-form": "^7.46.1",
    "react-inlinesvg": "^4.0.3",
    "react-innertext": "^1.1.5",
    "react-use": "^17.4.0",
    "scroll": "^3.0.1",
    "scrollparent": "^2.1.0"
  },
  "devDependencies": {
    "@emotion/jest": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@gilbarbara/eslint-config": "^0.5.4",
    "@gilbarbara/prettier-config": "^1.0.0",
    "@gilbarbara/tsconfig": "^0.2.3",
    "@gilbarbara/types": "^0.2.2",
    "@size-limit/esbuild-why": "^8.2.6",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@storybook/addon-a11y": "^7.4.0",
    "@storybook/addon-actions": "^7.4.0",
    "@storybook/addon-coverage": "^0.0.9",
    "@storybook/addon-docs": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-storysource": "^7.4.0",
    "@storybook/addons": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/client-api": "^7.4.0",
    "@storybook/jest": "^0.2.2",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.4.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@types/scroll": "^3.0.1",
    "@types/scrollparent": "^2.0.1",
    "@vitejs/plugin-react": "^4.0.4",
    "chromatic": "^7.0.0",
    "concurrently": "^8.2.1",
    "csstype": "^3.1.2",
    "del-cli": "^5.1.0",
    "deploy-aws-s3-cloudfront": "^3.8.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "jest-extended": "^4.0.1",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "repo-tools": "^0.2.2",
    "size-limit": "^8.2.6",
    "storybook": "^7.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "build": "pnpm run clean && tsup",
    "clean": "del dist/*",
    "watch": "tsup --watch",
    "lint": "eslint --fix src stories",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --bail --coverage",
    "typecheck": "tsc -p stories/tsconfig.json --noEmit",
    "size": "size-limit",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build -o build",
    "storybook:test:watch": "test-storybook --watchAll --verbose",
    "storybook:test:coverage": "test-storybook --coverage",
    "storybook:merge-coverage": "cp coverage/storybook/coverage-storybook.json coverage/coverage-storybook.json && nyc report --reporter=lcov -t coverage --report-dir coverage",
    "storybook:validate": "pnpm run storybook:build && concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"http-server build --p 6006 -s\" \"wait-on tcp:127.0.0.1:6006 && pnpm run storybook:test:coverage && pnpm run storybook:merge-coverage\"",
    "prepublishOnly": "pnpm run validate",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test:coverage && pnpm run build && pnpm run size",
    "prepare": "husky install"
  },
  "tsup": {
    "dts": true,
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "splitting": false
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "rules": {
      "testing-library/no-await-sync-events": "off"
    }
  },
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "name": "commonjs",
      "path": "./dist/index.js",
      "limit": "170 KB",
      "ignore": [
        "date-fns"
      ]
    },
    {
      "name": "esm",
      "path": "./dist/index.mjs",
      "limit": "100 KB"
    }
  ]
}
