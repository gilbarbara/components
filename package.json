{
  "name": "@gilbarbara/components",
  "version": "0.3.1",
  "description": "A collection of imperfect React components",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilbarbara/components"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/components/issues"
  },
  "homepage": "https://github.com/gilbarbara/components",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "./lib",
  "files": [
    "esm",
    "lib",
    "emotion.d.ts",
    "src"
  ],
  "sideEffects": false,
  "keywords": [],
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.1.2",
    "@gilbarbara/helpers": "^0.6.3",
    "@gilbarbara/react-dropdown": "^0.0.4",
    "colorizr": "^2.0.0",
    "deepmerge-ts": "^4.0.3",
    "is-lite": "^0.8.2",
    "polished": "^4.2.2",
    "react-copy-to-clipboard": "^5.1.0",
    "react-day-picker": "^7.4.9",
    "react-hook-form": "^7.31.2",
    "react-inlinesvg": "^3.0.0",
    "react-innertext": "^1.1.5",
    "react-merge-refs": "^1.1.0",
    "react-use": "^17.4.0",
    "scroll": "^3.0.1",
    "scrollparent": "^2.0.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@gilbarbara/eslint-config": "^0.2.4",
    "@gilbarbara/hooks": "^0.3.2",
    "@gilbarbara/prettier-config": "^0.1.0",
    "@gilbarbara/tsconfig": "^0.1.1",
    "@gilbarbara/types": "^0.1.1",
    "@size-limit/preset-big-lib": "^7.0.8",
    "@storybook/addon-a11y": "^6.5.5",
    "@storybook/addon-actions": "^6.5.5",
    "@storybook/addon-docs": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/addon-links": "^6.5.5",
    "@storybook/addon-storysource": "^6.5.5",
    "@storybook/addons": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.5",
    "@storybook/client-api": "^6.5.5",
    "@storybook/manager-webpack5": "^6.5.5",
    "@storybook/react": "^6.5.5",
    "@storybook/theming": "^6.5.5",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/react": "^17.0.45",
    "@types/react-copy-to-clipboard": "^5.0.2",
    "@types/react-dom": "^17.0.17",
    "@types/react-syntax-highlighter": "^15.5.1",
    "@types/scroll": "^3.0.1",
    "@types/scrollparent": "^2.0.1",
    "chromatic": "^6.5.4",
    "csstype": "^3.1.0",
    "del-cli": "^4.0.1",
    "deploy-aws-s3-cloudfront": "^3.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-watch-typeahead": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.5.0",
    "repo-tools": "^0.2.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "clean": "del lib/* && del esm/*",
    "lint": "eslint --ext .js,.ts,.tsx src stories",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --bail --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "validate": "npm run lint && npm run typecheck && npm run build && npm run size",
    "storybook:dev": "start-storybook -p 4000",
    "storybook:build": "build-storybook -o build",
    "prepublishOnly": "npm run validate",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "stories/**/*"
        ],
        "rules": {
          "react/function-component-definition": "off"
        }
      }
    ]
  },
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "name": "lib",
      "path": "./lib/*.js",
      "limit": "140 KB"
    },
    {
      "name": "esm",
      "path": "./esm/**/*.js",
      "limit": "100 KB"
    }
  ]
}
