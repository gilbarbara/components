{
  "extends": "@gilbarbara/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "~": ["src/index"],
      "~/*": ["src/*"],
      "~/stories/*": ["stories/*"]
    },
    "target": "ESNext"
  },
  "include": ["src/**/*"]
}
